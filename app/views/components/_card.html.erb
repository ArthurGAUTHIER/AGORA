<div class="card">
  <div class="card-image" style="background-image: url('<%= image_path 'avatar-movie.jpg' %>');"></div>
  <div class="card-title">
    <%= medium.title %>
  </div>
  <div class="card-synopsis">
    <p><%= medium.synopsys.truncate_words(10) %></p>
  </div>
  <% audience_rating = (medium.audience_rating / 2).round %>
  <% press_rating = (medium.press_rating / 2).round %>
  <div class="card-press-rating">
    <span>Press rating:</span>
    <% 5.times do |i| %>
      <span class="glyphicon glyphicon-star <%= i < press_rating ? 'on' : 'off' %>"></span>
    <% end %>
  </div>
  <div class="card-audience-rating">
    <span>Audience rating:</span>
    <% 5.times do |i| %>
      <span class="glyphicon glyphicon-star <%= i < audience_rating ? 'on' : 'off' %>"></span>
      <% end %>
  </div>
</div>
