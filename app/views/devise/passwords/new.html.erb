   <div class="banner" style="background-image: radial-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.4)),url('<%= image_path 'question.jpg' %>');">
<div class="container">
  <br><br><br><br>
  <h2 class= "color-font">Forgot your password?</h2>
<br>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs color-font">
    <%= f.input :email,
    required: true,
    autofocus: true,
    input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions" %>
  </div>
  <br>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
