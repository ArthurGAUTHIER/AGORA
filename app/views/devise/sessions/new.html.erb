<div class="banner" style="background-image: radial-gradient(rgba(0,0,0,0), rgba(0,0,0,0.4)),url('<%= image_path 'ticket.jpg' %>');">
<div class="container">
  <br><br><br><br>
<h2 class= "color-font">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs color-font">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password"} %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "hover-btn" %>
  </div>
  <br>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
