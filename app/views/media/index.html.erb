<% medium = @media.first # developement %>
<div id="back" class="btn btn-lg btn-back"><<</div>
<div id="next" class="btn btn-lg btn-next">>></div>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="text-center">
        <h1>
          <%= medium.title %>
          <small><%= (medium.duration / 60).to_s << 'h ' << (medium.duration % 60).to_s << 'min'%></small>
        </h1>
      </div>
    </div>
  </div>
  <div class="video-header">
    <div class="row">
      <div class="col-xs-12">
        <div class="text-center">
          <div class="btn btn-lg btn-danger">Blacklist</div>
          <span class="spacer"></span>
          <div class="btn btn-lg btn-danger">Already watched</div>
          <span class="spacer"></span>
          <div class="btn btn-lg btn-danger">Watch later</div>
        </div>
      </div>
    </div>
  </div>
  <div class="video-wrapper">
    <div class="embed-responsive embed-responsive-16by9">
      <% search = URI.escape(medium.title.tr(' ', '+') << 'Trailer') %>
      <iframe src="https://www.youtube.com/embed?listType=search&list=<%= search %>;autoplay=0" frameborder="0"></iframe>
    </div>
  </div>
  <div class="row">
    <% audience_rating = (medium.audience_rating / 2).round %>
    <% press_rating = (medium.press_rating / 2).round %>
    <div class="col-xs-4">
      <div class="text-center">
        <h3>Audience</h3>
        <% 5.times do |i| %>
          <span class="glyphicon glyphicon-star <%= i < audience_rating ? 'on' : 'off' %>"></span>
        <% end %>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="text-center">
        <h3>Press</h3>
        <% 5.times do |i| %>
          <span class="glyphicon glyphicon-star <%= i < audience_rating ? 'on' : 'off' %>"></span>
        <% end %>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="text-center stream-links">
        <%= link_to medium.netflix_link do %>
          <%= image_tag 'blank-avatar.png', width: 80, height: 80 %>
        <% end %>
        <%= link_to medium.netflix_link do %>
          <%= image_tag 'blank-avatar.png', width: 80, height: 80 %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="container">
    <div class="red-well wrapper-well">
      <div class="media">
        <div class="media-left media-middle">
          <%= image_tag 'avatar-movie.jpg', width: 300, height: 450, class: 'media-object' %>
        </div>
        <div class="media-body media-middle">
          <h2 class="media-heading text-center"><%= medium.title %></h2>
          <p class="wrapper-container"><%= medium.synopsys %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="wrapper-container">
  <div class="row">
    <div class="col-xs-6">
      <div class="media">
        <div class="media-left media-middle">
          <strong>Actors</strong>
        </div>
        <div class="media-body media-middle">
          <div class="row">
            <% medium.actors.each do |actor| %>
            <div class="col-xs-3">
              <div class="text-center">
                <%= image_tag 'blank-avatar.png', width: 80, height: 80 %>
                <p><%= actor.full_name %></p>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="media">
        <div class="media-left media-middle">
          <strong>Studio</strong>
        </div>
        <div class="media-body media-middle">
          <p><%= medium.studio.name %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="wrapper-container">
  <div class="row">
    <div class="col-xs-6">
      <div class="row">
        <div class="media">
          <div class="media-left media-middle">
            <strong>Director</strong>
          </div>
          <div class="media-body media-middle">
            <div class="row">
              <% medium.directors.each do |director| %>
              <div class="col-xs-3">
                <div class="text-center">
                  <%= image_tag 'blank-avatar.png', width: 80, height: 80 %>
                  <p><%= director.full_name %></p>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="row">
        <div class="media">
          <div class="media-left media-middle">
            <div class="spacer-vertical"></div>
            <strong>Country</strong>
          </div>
          <div class="media-body media-middle">
            <p><%= medium.country %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>
